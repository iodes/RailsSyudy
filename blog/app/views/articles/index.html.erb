<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">

<style>
    #title {
        margin-top: 30px;
        margin-bottom: 20px;
    }

    .center {
        width: 70%;
        margin: 0 auto;
        margin-bottom: 30px;
    }
</style>

<div class="center">
    <h3 id="title">
        블로그 전체 글
        <small class="text-muted">블로그에 작성된 모든 글입니다.</small>
    </h3>

    <% @articles.each do |article| %>
        <div class="card border-info mb-3">
            <div class="card-header">
                <%= link_to article.title, article_path(article) %>
                <a style="float:right;"><%= article.created_at %></a>
            </div>
            <div class="card-body text-info">
                <p class="card-text"><%= render :inline => article.text %></p>
                <p style="text-align: right;">
                    <%= link_to '편집', edit_article_path(article), :class => 'btn btn-outline-secondary' %>
                    <%= link_to '삭제', article_path(article), method: :delete, data: { confirm: '정말로 삭제하시겠습니까?' }, :class => 'btn btn-outline-danger' %>
                </p>
            </div>
        </div>
    <% end %>
    
    <p style="text-align: right;">
        <%= link_to '새로운 글쓰기', new_article_path, :class => 'btn btn-outline-primary' %>
    </p>
</div>

